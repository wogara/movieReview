<%-include('../partials/header.ejs')%>
<div class = "container">

	<div class = "row">
		<h1 style = "text-align:center;color:white;">Write your new review!</h1>

		<div style = "width: 30%; margin: 25px auto;">
			<form action = "/movies" method = "POST">
				<div class = "form-group">
					<input class = "form-control" type="text" name="name" placeholder = "title">
				</div>
				<div class = "form-group">
					<input class = "form-control" type="number" name="year" placeholder = "year" min = "1900" step = "1">
				</div>

				<div class = "form-group">
				    <input class = "form-control" type="text" name="image" placeholder = "image url">
			    </div>

			    <div class = "form-group">
				<!--    <input class = "form-control" type="text" name="review" placeholder = "review">-->
                    <textarea class = "form-control" rows = "5" placeholder="review" name="review"></textarea>
			    </div>

				<div class = "form-group">
				    <button class = "btn btn-lg btn-primary btn-block" type = "submit">PRESS TO SUBMIT</button>
			    </div>
			</form>
			<a style="color:white" href="/movies">Go Back</a>
		</div>
	</div>
</div>
<%-include('../partials/footer.ejs')%>
