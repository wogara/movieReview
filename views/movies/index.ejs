<%-include('../partials/header.ejs')%>


<div class = 'container'>

	<header class = "jumbotron">
		<h1>Welcome to movieReviews!</h1>
		<p>View our favorite movies of all time!</p>
		<p>
			<a class = "btn btn-primary btn-lg" href="/movies/new">Write a new review!</a>
		</p>
	</header>

	<div class = "row">
		<div class = "col-lg-12">
			<h3>Reviews!</h3>
		</div>
	</div>

	
	<div class = "row">
		<%movies.forEach(function(movie){%>
			<div class = "col-md-3 col-sm-6">
				<!-- <h4>
					<%=movie.name%>
				</h4> -->
				<div class = "thumbnail text-center">
					<img class = "img-fluid" src="<%=movie.image%>">
					<div class = "caption">
						<h4><%=movie.name%></h4>
					</div>
					<p>
						<a href = "/movies/<%=movie._id%>" class = "btn btn-primary">More info</a>
					<p>
				</div>
			</div>
		<%})%>
    </div>

</div>

<%-include('../partials/footer.ejs')%>

