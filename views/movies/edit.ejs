<%-include('../partials/header.ejs')%>
<div class = "container">

	<div class = "row">
		<h1 style = "text-align:center;">Edit <%=movie.name%></h1>

		<div style = "width: 30%; margin: 25px auto;">
			<form action = "/movies/<%=movie._id%>?_method=PUT" method = "POST">
				<div class = "form-group">
					<input class = "form-control" type="text" name="movie[name]" value = "<%=movie.name%>">
				</div>
				<div class = "form-group">
					<input class = "form-control" type="number" name="movie[year]" value = "<%=movie.year%>" min = "0.01" step = "0.01">
				</div>


				<div class = "form-group">
				    <input class = "form-control" type="text" name="movie[image]" value = "<%=movie.image%>">
			    </div>

			    <div class = "form-group">
				    <input class = "form-control" type="text" name="movie[review]" value = "<%=movie.review%>">
			    </div>

				<div class = "form-group">
				    <button class = "btn btn-lg btn-primary btn-block" type = "submit">PRESS TO SUBMIT</button>
			    </div>
			</form>
			<a href="/movies">Go Back</a>
		</div>
	</div>
</div>
<%-include('../partials/footer.ejs')%>
