	<div class = "row">
		<h1 style = "text-align:center;">edit your comment</h1>

		<div style = "width: 30%; margin: 25px auto;">
			<form action = "/movies/<%=movie_id%>/comments/<%=comment._id%>?_method=PUT" method = "POST">
